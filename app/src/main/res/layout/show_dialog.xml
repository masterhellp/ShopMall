<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="收货人"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/dialog_nameView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入收货人名称"
            android:maxLength="13"
            android:singleLine="true"
            android:textColorHint="#d8d8d8"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="电  话"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/dialog_phoneView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入您的电话"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColorHint="#d8d8d8"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />

    <RelativeLayout
        android:id="@+id/dialog_address"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogName"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="地  址"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_addressView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dialogName"
            android:gravity="center_vertical"
            android:hint="请选择您的地址"
            android:singleLine="true"
            android:textColorHint="#d8d8d8"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_address_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp">

        <EditText
            android:id="@+id/dialog_info_address"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@drawable/detail_address_bg"
            android:hint="请输入您的详细地址"
            android:paddingLeft="10dp"
            android:textColorHint="#d8d8d8"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
