<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/base_ui_mall_dialog_width"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/base_ui_mall_dialog_style8_content_padding"
    android:paddingRight="@dimen/base_ui_mall_dialog_style8_content_padding"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mall_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_ui_mall_dialog_style8_title_margin_top"
        android:gravity="center"
        android:textColor="@color/c_F15353"
        android:textSize="@dimen/base_ui_mall_dialog_style8_title_textview_size" />

    <ListView
        android:id="@+id/mall_dialog_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alwaysDrawnWithCache="false"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:layout_weight="1"
        android:divider="@null"
        android:fadeScrollbars="true"
        android:persistentDrawingCache="none"
        android:scrollingCache="false"
        android:dividerHeight="@dimen/base_ui_mall_dialog_style8_listview_dividerheight"
        android:layout_marginTop="@dimen/base_ui_mall_dialog_style8_listview_margin_top">
    </ListView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginTop="@dimen/base_ui_mall_dialog_style8_view_margin_top"
        android:background="@drawable/mall_dialog_common_divider"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base_ui_mall_dialog_button_content_height"
        android:layout_marginBottom="@dimen/base_ui_mall_dialog_style8_button_margin_bottom"
        android:layout_marginTop="@dimen/base_ui_mall_dialog_style8_button_margin_top"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/mall_dialog_pos_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/base_ui_mall_dialog_button_child_height"
            android:layout_weight="1"
            android:background="@drawable/button_d"
            android:textColor="@color/c_686868"
            android:textSize="@dimen/base_ui_mall_dialog_button_text_size" />
    </LinearLayout>

</LinearLayout>